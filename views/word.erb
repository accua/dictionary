<h1><%= @word.word() %></h1>
<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <ul>
      <% @word.definitions.each() do |definition| %>
      <li><%= definition.define() %></li>
      <% end %>
      </ul>
    </div>
    <div class="col-sm-4">
      <form action="/word" method="post">
        <input type="hidden" name="word_id" value="<%= @word.id() %>">
        <div class="form-group">
          <h4>Enter a definition</h4>
          <input type="text" name="definition" placeholder="Definition" autofocus>
        </div>
       <button class="btn" type="submit">Add Definition</button>
      </form>
    </div>
  </div>
</div>
