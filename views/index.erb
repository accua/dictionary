<h1>Dictionary</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <ul>
        <% @words.each() do |word| %>
        <li><a href="words/<%= word.id() %>"><%= word.word() %></a></li>
        <% end %>
      </ul>
    </div>
    <h3>Enter A Word</h3>
    <div class="col-sm-4">
      <form action="/" method="post">
        <div class="form-group">
          <input type="text" name="inputted_word" placeholder="Word">
        </div>
        <button type="submit" name="submit">Submit Your Word</button>
      </form>
    </div>
  </div>
</div>
